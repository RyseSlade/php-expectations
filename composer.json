{
    "name": "aedon/php-expectations",
    "license": "MIT",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "vimeo/psalm": "^5.26",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Aedon\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aedon\\Test\\": "tests"
        }
    },
    "scripts": {
        "analyse": "./vendor/bin/psalm",
        "test": "./vendor/bin/phpunit --testdox"
    }
}
